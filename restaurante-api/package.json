{
  "name": "restaurante-api",
  "version": "1.0.0",
  "description": "gerenciamento de reservas para restaurante com avaliação",
  "main": "index.js",
  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "migration:create": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create",
    "migration:run": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/lib/typeorm/typeorm.ts migration:run",
    "migration:revert": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/lib/typeorm/typeorm.ts migration:revert",
    "migration:generate": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/lib/typeorm/typeorm.ts migration:generate"
  },
  "keywords": [],
  "author": "Marcelino P Santos",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.10.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-cors": "^6.0.3",
    "fastify-jwt": "^4.1.3",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "zod": "^4.1.13"
  }
}
